<%- include('partials/header') %>

<section class="py-5 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto text-center">
                <div class="py-5">
                    <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
                    <h1 class="display-4 fw-bold mb-3"><%= title || 'Error' %></h1>
                    <p class="lead text-muted mb-4"><%= message %></p>
                    
                    <% if (error && error.stack && process.env.NODE_ENV === 'development') { %>
                        <div class="alert alert-danger text-start mt-4">
                            <h5>Debug Information:</h5>
                            <pre class="mb-0"><%= error.stack %></pre>
                        </div>
                    <% } %>
                    
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary me-2">
                            <i class="fas fa-home me-2"></i>Go Home
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
